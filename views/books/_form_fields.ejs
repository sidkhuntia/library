
<div>
  <label>Name</label>
  <input
    type="text"
    name="name"
    placeholder="Enter Book's Name"
    value="<%= book.name %>"
  />
</div>


<div>
  <label>Author</label>
  <select name="author">
    <% authors.forEach((author) => { %> 
      <option value="<%= author.id %>" <%= author.id === book.author ? 'selected' : '' %>>
        <%= author.name %>
      </option>
    <% }) %>
  </select>
</div>


<div>
  <label>Published Date</label>
  <input type="date" 
  name="publishDate" 
  value="<%= book.publishDate == null ? "": book.publishDate.toISOString().split("T")[0] %>" />
</div>


<div>
  <label>Page Count</label>
  <input
    type="text"
    name="pageCount"
    placeholder="123"
    min="1"
    value="<%= book.pageCount %>"
  />
</div>


<div>
  <label>Cover</label>
  <input type="file" name="cover" class="filepond"/>
</div>


<div>
  <label>Description</label>
  <textarea
    name="description"><%= book.description %> </textarea>
</div>
