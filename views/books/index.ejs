<h1>Search Books</h1>
<form action="/books" method="GET">
  <div>
    <label>Name</label>
    <input type="text" name="name" value="<%= searchOptions.name %>" />
  </div>
  <div>
    <label>Author</label>
    <select name="author">
      <option value=""></option>
      <% authors.forEach((author) => { %> 
        <option value="<%= author.id %>" <%= author.id === searchOptions.author ? 'selected' : '' %>>
          <%= author.name %>
        </option>
      <% }) %>
    </select>
  </div>
  <div>
    <label>Published After</label>
    <input
      type="date"
      name="publishedAfter"
      value="<%= searchOptions.publishedAfter  %>"
    />
  </div>
  <div>
    <label>Published Before</label>
    <input
      type="date"
      name="publishedBefore"
      value="<%= searchOptions.publishedBefore  %>"
    />
  </div>
  <button type="submit">Search</button>
</form>
<br />
<div>
  <% books.forEach(book => { %>
    <a href="/books/<%= book.id  %>">
      <img width="250px" height="250px" src="<%= book.coverImagePath %>" title="<%= book.name %> " alt="<%= book.name %> " />
    </a>
  <% }) %>
</div>
